{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["client", "data"]
}
